{
    "tags": {
        "allowUnknownTags": [
            "pailhead",
            "component"
        ] 
    },
    "recurseDepth": 10,
    "opts": {
        "template": "node_modules/better-docs",
        "destination": "docs/"
      },
    "source": {
        "include": ["./src/"],
        "excludePattern": ".*/(lib|utils)/.*"
    },
    "plugins": [
        "node_modules/better-docs/component"
    ]
}
